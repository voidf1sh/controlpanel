<!DOCTYPE html>
<html>
<head>
	<title>Temperature Graphs</title>

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Bootstrap CSS -->
	<!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous"> -->
	
	<!-- Chart.js -->
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
	<link rel="stylesheet" type="text/css" href="./src/main.css">
</head>
<body>
	<!-- Header -->
	<%- include('../partials/_header') -%>
	<div class="container center">
		<!-- Current Temps -->
		
		<div class="row">
			<div class="col-sm"></div>
			<div class="col-sm">
				<form action="temps.php" method="POST">
					<label for="sensor_id">Sensor:</label>
					<select id="sensor_id" name="sensor_id">
						<option value="28-00000676d99f">Living Room (Head)</option>
						<option value="28-000007297e74">Living Room (Ceiling)</option>
						<option value="28-000006779ad0">28-000006779ad0</option>
						<option value="28-000006788573">28-000006788573</option>
						<option value="28-000004d07f35">28-000004d07f35</option>
						<option value="28-00000728fb18">28-00000728fb18</option>
					</select>
					<label for="time_range">Time:</label>
					<input type="datetime" name="time_range">
					<label for="interval">Interval:</label>
					<select id="interval" name="interval">
						<option value="5m">5 minutes</option>
						<option value="30m">30 minutes</option>
						<option value="1h">1 hour</option>
						<option value="6h">6 hours</option>
						<option value="12h">12 hours</option>
						<option value="1d">1 day</option>
					</select>
					<input type="submit" value="Submit">
				</form>
				<br>
			</div>
			<div class="col-sm"></div>
		</div>

		<div class="break"></div>

		<!-- Temperature Graph -->
		<div class="graph-container">
			<div class="graph">
				<h3 class="subtitle">Historic Temperatures</h3><br>
				<canvas id="graph"></canvas><br>
			</div>
		</div>
	</div>

	

	<!-- Chart.js -->
	<!-- 6 Hours -->
	<script type="text/javascript">
		var ctx = document.getElementById('sixHour').getContext('2d');
		var sixHour = new Chart(ctx, {
			type:  'line',
			data: {
				labels: [],
				datasets: [{
					label: "Temperature",
					data: [],
					borderColor: '#9eb5ff',
					fill: false
				}]
			},
			options: {
				layout: {
					padding: {
						left: 0,
						right: 4,
						top: 0,
						bottom: 0
					}
				},
				maintainAspectRatio: false,
				scales: {
					xAxes: [{
						gridLines: {
							color: '#888888'
						},
						ticks: {
							fontColor: '#AAAAAA',
							maxTicksLimit: 10
						}
					}],
					yAxes: [{
						gridLines: {
							color: '#888888'
						},
						ticks: {
							fontColor: '#AAAAAA',
							suggestedMin: 50,
							suggestedMax: 80
						}
					}]
				},
			    legend: {
			        display: false
			    },
			    tooltips: {
			        callbacks: {
			           label: function(tooltipItem) {
			                  return tooltipItem.yLabel;
			           }
			        }
			    },
			    elements: {
                    point:{
                        radius: 0
                    }
                }
			}
		});
	</script>
</body>
</html>